{# templates/user/collection.html.twig #}
{% extends 'base.html.twig'%}

{% block body %}

<p>Bienvenue sur ton profil {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></p>
<h1>Bienvenue sur votre collection</h1>

    {% for item in works %}
        <p>{{ item.title }}</p>
        <img src ="{{ asset('pictures/'~ item.pictures ~'') }}" height = "400px" width="300px">
    {% endfor %}
    
{% endblock %}